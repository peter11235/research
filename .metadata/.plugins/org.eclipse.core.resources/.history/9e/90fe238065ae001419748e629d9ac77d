package soundgrid;

import java.awt.GridLayout;
import java.io.File;

import javax.swing.ImageIcon;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class ImageGrid extends JFrame {

	private JPanel[][] iconContainers;
	private ImageIcon[][] icons;
	private JPanel mainContainer;
	
	
	public ImageGrid()
	{
		init();
	}
	
	public void init()
	{
		mainContainer = new JPanel(new GridLayout(3,3));
		icons = new ImageIcon[3][3];
		iconContainers = new JPanel[3][3];
		
		for (int i = 0; i < 3; i++)
		{
			for (int j = 0; j<3; j++)
			{
				mainContainer.add(icons[i][j]);
			}
		}
	}
	
	public void addImages(String fileName, int x, int y)
	{
		icons[x][y] = new ImageIcon(fileName);
	}
}
