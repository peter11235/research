package soundgrid;

import java.awt.GridLayout;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.ImageIcon;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class ImageGrid extends JFrame {

	private JPanel[][] iconContainers;
	private ImageIcon[][] icons;
	private JPanel mainContainer;
	
	
	public ImageGrid()
	{
		init();
	}
	
	public void init()
	{
		mainContainer = new JPanel(new GridLayout(3,3));
		icons = new ImageIcon[3][3];
		iconContainers = new JPanel[3][3];
		
		
		
		for (int i = 0; i < 3; i++)
		{
			for (int j = 0; j<3; j++)
			{
				mainContainer.add(iconContainers[i][j]);
			}
		}
	}
	
	public void addImage(String fileName, int x, int y)
	{
		BufferedImage myPicture = null;
		try {
			myPicture = ImageIO.read(new File(fileName));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		JLabel picLabel = new JLabel(new ImageIcon(myPicture));
		iconContainers[x][y].add(picLabel);
	}
}
